---
//@ts-nocheck
import "/src/styles/style.css";
---

<header class="header">
  <div class="header-top">
    <!-- Burger-menu -->
    <div class="burger" id="burger-menu">
      <span></span>
      <span></span>
      <span></span>
    </div>

    <!-- Navigation -->
    <nav class="menu nav" id="nav">
      <ul class="nav-list">
        <li><a href="/">Praktisk info</a></li>
        <li><a href="/events">Kalender</a></li>
        <li><a href="/InfoSection">Hvad tilbyder vi?</a></li>
        <li><a href="/adgang-til-labbet">Adgang til labbet</a></li>
        <li><a href="/material-connexion">Material Connexion</a></li>
        <li><a href="/kontakt">Kontakt</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  /* Header styling */
  .header {
    position: absolute;
    width: 100%;
    font-family: "Roboto Condensed", sans-serif;
    z-index: 100;
  }

  .header-top {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 3rem 2rem;
    position: relative;
  }

  .nav {
    display: flex;
    justify-content: flex-end;
  }

  .nav-list {
    list-style: none;
    display: flex;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }

  .nav-list li {
    display: inline;
  }

  .nav-list a {
    text-decoration: none;
    color: #000;
    font-weight: bold;
    font-size: 1.1rem;
  }

  .nav-list a:hover {
    color: #ff671f;
    border-bottom: #ff671f solid 3px;
    transition:
      color 0.2s,
      border-bottom 0.2s;
  }

  /* Burger-menu styling */
  .burger {
    display: none;
    flex-direction: column;
    gap: 0.4rem;
    cursor: pointer;
    position: absolute;
    top: 2rem;
    right: 2rem;
    z-index: 1001;
  }

  .burger span {
    display: block;
    width: 25px;
    height: 3px;
    background-color: #000;
    transition: all 0.3s ease;
  }

  .burger.open span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .burger.open span:nth-child(2) {
    opacity: 0;
  }

  .burger.open span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  /* Mobile navigation */
  @media (max-width: 1300px) {
    .burger {
      display: flex;
    }

    .nav {
      display: none;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: #ff671f;
      padding: 2rem;
      transform: translateY(-100%);
      transition: transform 0.3s ease-in-out;
      z-index: 1000;
      border: none;
      border-radius: 0;
    }

    .nav.active {
      display: flex;
      transform: translateY(0);
    }

    .nav-list {
      flex-direction: column;
      gap: 2rem;
      width: 100%;
      align-items: center;
    }

    .nav-list a {
      padding: 1rem;
      font-size: 1.25rem;
      width: 100%;
      text-align: center;
      color: #000;
      transition:
        color 0.2s,
        background-color 0.2s;
    }

    .nav-list a:hover {
      color: hwb(0 100% 0%);
      background-color: #000000;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const burger = document.getElementById("burger-menu");
    const nav = document.getElementById("nav");

    if (burger && nav) {
      burger.addEventListener("click", function () {
        nav.classList.toggle("active");
        burger.classList.toggle("open");
      });

      // Fix: reset menu on resize back to desktop
      window.addEventListener("resize", () => {
        if (window.innerWidth > 768) {
          nav.classList.remove("active");
          burger.classList.remove("open");
        }
      });
    }
  });
</script>
